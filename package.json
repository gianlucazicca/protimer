{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "docker:up": "docker compose -f dev-ops/protimer_db/docker-compose.yml up -d",
    "docker:down": "docker compose -f dev-ops/protimer_db/docker-compose.yml down",
    "drizzle:generate": "drizzle-kit --config=config/drizzle.config.ts generate",
    "drizzle:migrate": "drizzle-kit --config=config/drizzle.config.ts migrate",
    "drizzle:studio": "drizzle-kit --config=config/drizzle.config.ts studio"
  },
  "prisma": {
    "schema": "src/db/prisma"
  },
  "dependencies": {
    "drizzle-orm": "^0.31.2",
    "jsonwebtoken": "^9.0.2",
    "nuxt": "^3.12.1",
    "postgres": "^3.4.4",
    "vue": "^3.4.27",
    "vue-router": "^4.3.3",
    "zod": "^3.22.4"
  },
  "packageManager": "pnpm@9.1.4",
  "devDependencies": {
    "@nuxt/ui": "^2.17.0",
    "@nuxtjs/tailwindcss": "^6.12.0",
    "drizzle-kit": "^0.22.7",
    "tailwindcss": "^3.4.4"
  }
}
